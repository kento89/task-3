<div class="left-button">
    <%= link_to "ユーザー一覧に戻る", "/users/index", class: "edit-link" %>
</div>
<h4><%= @entries.name %>さんとのチャット</h4>
<div class="chats">
    <div class="chat">
        <% if @messages.present? %>
            <% @messages.each do |m| %>
            <div class="chat-box">
                <div class="chat-face">
                    <%= attachment_image_tag(m.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>
    <div class="posts">
        <%= form_for @message do |f| %>
            <%= f.text_field :content, size: 70, class: "form-text-field" %>
            <%= f.hidden_field :foom_id, value: @room.id %>
            <%= f.submit "投稿", class: "form-submit" %>
        <% end %>
    </div>
</div>