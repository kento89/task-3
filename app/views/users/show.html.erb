<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render partial: 'info', locals: {user: @user} %>
      <%= render partial: 'gochat', locals: {user: @user, isRoom: @isRoom, roomId: @roomId, room: @room, entry: @entry} %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <%= render partial: 'users/bookcount', locals: {todayBooks: @todayBooks, yesterdayBook: @yesterdayBook, counts: @counts} %>
    </div>
  </div>
</div> 