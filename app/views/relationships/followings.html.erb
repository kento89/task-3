<h2>Follow Users</h2>
<% if @users.exists? %>
<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbodt>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
    </tbodt>
 </table>
 <% else %>
 <p>ユーザーはいません</p>
<% end %>