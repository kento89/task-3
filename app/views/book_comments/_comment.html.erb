        <% book.book_comments.each do |book_comment|  %>
            <div>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
              <%= book_comment.user.name %>
            <% end %>
            </div>
            <div>
              <%= book_comment.comment %>
            </div>
            
           <div>
             <% if book_comment.user == current_user %>
              <div>
                <%= link_to "Destroy", book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger mb-3", remote: true, data: {config: "本当に削除してサイじょぶ？？"}  %>
              </div>
              <% end  %>
           </div>
        <% end  %>      
    
